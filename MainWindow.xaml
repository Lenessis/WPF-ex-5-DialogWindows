<Window x:Class="zad5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:zad5"
        mc:Ignorable="d"
        Title="Filmy" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <ListBox Grid.Row="0" Name="MovieList" Padding="5" SelectionChanged="ChangeElement"/>


        <Grid Grid.Row="1" >

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
           
            
            <Button Grid.Column="0" Padding="10,5" Margin="20" Click="AddMovie">Dodaj</Button>
            <Button Grid.Column="1" Padding="10,5" Margin="20" Click="EditMovie">Edytuj</Button>
            <Button Grid.Column="2" Padding="10,5" Margin="20" Click="PreviewMovie">Podgląd</Button>
            <Button Grid.Column="3" Padding="10,5" Margin="20" Click="RemoveMovie">Usuń</Button>
            

        </Grid>

        
        
    </Grid>
</Window>
